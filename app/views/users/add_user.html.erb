<div class="content">
  <div style="text-align: left; margin-top: 100px;">

    <%= form_for(:user, url: create_path, data: { turbo: false }) do |f| %>
      <div class="field">
        <h1 style="color: #365486;">Add User</h1>
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %> <br />
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %><br />
      </div>

       <div class="field">
        <%= f.label :role_id, class: "form-label" %><br />
        <%= f.collection_select :role_id, Role.all, :id, :role_name, { prompt: "Select a role" }, { class: "form-control", required: true } %><br />
      </div>

      <div class="field">
        <%= f.label :company_id, class: "form-label" %><br />
        <%= f.collection_select :company_id, Company.all, :id, :company_name, { prompt: "Select a company" }, { class: "form-control", required: true } %><br />
      </div>
      
        <div class="field">
        <%= f.label :department_id, class: "form-label" %><br />
        <%= f.collection_select :department_id, Department.all, :id, :department_name, { prompt: "Select a department" }, { class: "form-control", required: true } %><br />
      </div>
      <div class="field">
        <%= f.label :designation_id, class: "form-label" %><br />
        <%= f.collection_select :designation_id, Designation.all, :id, :name, { prompt: "Select a department" }, { class: "form-control", required: true } %><br />
      </div>

      <div class="field">
        <%= f.submit "Add", class: "btn btn-primary", style: "width: 100px; background-color: #365486; border-color: #365486;" %>
      </div>

    <% end %>
  </div>
</div>
<%= render 'layouts/sidebar' %>
